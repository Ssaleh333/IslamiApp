<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:statusBarColor">#9E825A</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- تحديد الخط المخصص -->
        <item name="android:itemTextAppearance">@style/CustomMenuItemTextAppearance</item>
    </style>

    <style name="CustomMenuItemTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:fontFamily">@font/messsiri</item>
    </style>

    <style name="bottomNavigationStyle">
        <item name="itemTextColor">@color/home_bottom_nav_selector</item>
        <item name="itemIconTint">@color/home_bottom_nav_selector</item>
        <item name="itemIconSize">35dp</item>
        <item name="itemBackground">@null</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/background_nav</item>

    </style>

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp" />
</resources>